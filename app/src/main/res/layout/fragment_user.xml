<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lite_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.UserFragment">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

  <RelativeLayout
      android:id="@+id/relativeLayout"
      android:layout_width="match_parent"
      android:layout_height="365dp"
      android:background="@drawable/relative_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:src="@drawable/usericon"
        app:civ_border_color="@color/pink"
        app:civ_border_width="2dp" />

    <TextView
        android:layout_below="@+id/profile_image"
        android:id="@+id/name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="Dhruv Jogani"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/location_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_textview"
        android:layout_marginTop="5dp"
        android:text="Ahmedabad,India"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="15sp" />
  </RelativeLayout>


  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


      <ImageView
          android:id="@+id/profile_email"
          android:layout_width="40dp"
          android:layout_height="40dp"
          app:tint="@color/dark_blue"
          android:src="@drawable/ic_email_24" />

      <TextView
          android:id="@+id/profile_email_text"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="Email"
          android:textAlignment="center"
          android:textColor="@color/white"
          android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


      <ImageView
          android:id="@+id/profile_phone"
          android:layout_width="40dp"
          app:tint="@color/dark_blue"
          android:layout_height="40dp"
          android:src="@drawable/ic_phone" />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <TextView
            android:id="@+id/profile_phone_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/edit_phone"
            android:gravity="center"
            android:text="Phone"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="visible" />


      <EditText
          android:visibility="gone"
          android:layout_toLeftOf="@id/edit_phone"
          android:id="@+id/profile_phone_editText"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          tools:text="Phone"
          android:maxLength="10"
          android:inputType="number"
          android:textCursorDrawable="@color/dark_blue"
          android:backgroundTint="@color/dark_blue"
          android:textAlignment="center"
          android:textColor="@color/white"
          android:textSize="18dp" />

        <ImageView
            android:visibility="visible"
            android:padding="3dp"
            android:id="@+id/edit_phone"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_edit_" />
        <ImageView
            android:visibility="gone"
            android:padding="3dp"
            android:id="@+id/edit_phone_done"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_done" />

      </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


      <ImageView
          android:id="@+id/profile_address"
          android:layout_width="40dp"
          android:layout_height="40dp"
          app:tint="@color/dark_blue"
          android:src="@drawable/ic_settings_24" />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

      <TextView
          android:visibility="visible"
          android:layout_toLeftOf="@id/edit_address"
          android:id="@+id/profile_address_text"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="Address"
          android:textAlignment="center"
          android:textColor="@color/white"
          android:textSize="20dp" />

        <EditText
            android:visibility="gone"
            android:layout_toLeftOf="@id/edit_address"
            android:id="@+id/profile_address_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="Address"
            android:textCursorDrawable="@color/dark_blue"
            android:backgroundTint="@color/dark_blue"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageView
            android:visibility="visible"
            android:padding="3dp"
            android:id="@+id/edit_address"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_edit_" />
        <ImageView
            android:visibility="gone"
            android:padding="3dp"
            android:id="@+id/edit_address_done"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_done" />

      </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


      <ImageView
          android:id="@+id/profile_share"
          android:layout_width="40dp"
          android:layout_height="40dp"
          app:tint="@color/dark_blue"
          android:src="@drawable/ic_share_24" />

      <TextView
          android:id="@+id/profile_share_text"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="Share"
          android:textAlignment="center"
          android:textColor="@color/white"
          android:textSize="20dp" />
    </LinearLayout>


  </LinearLayout>


  <Button
      android:layout_marginTop="80dp"
      android:id="@+id/home_signOutBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="signout"
      android:textAlignment="center"
      android:layout_marginBottom="10dp"
      app:backgroundTint="@null"
      android:background="@drawable/button_bg"
      android:layout_gravity="center" />

  </LinearLayout>
</ScrollView>